<Application x:Class="ProjectTracker.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ProjectTracker"
             xmlns:converters="clr-namespace:ProjectTracker.Converters">
    <Application.Resources>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/Common.xaml"/>
                <ResourceDictionary Source="/Styles/Buttons.xaml"/>
                <ResourceDictionary Source="/Styles/Borders.xaml"/>
                <ResourceDictionary Source="/Styles/Miscellaneous.xaml"/>
                <ResourceDictionary Source="/Styles/Values.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <converters:TabWidthConverter x:Key="TabWidthConverter"/>
            <converters:VisibilityConverter x:Key="VisibilityConverter"/>
            <converters:DatabindingDebugConverter x:Key="DebugConverter"/>
            <converters:GroupHeightConverter x:Key="GroupHeightConverter"/>
            <converters:ColorConverter x:Key="ColorConverter"/>
            <converters:ColorToIntConverter x:Key="ColorToIntConverter"/>
            <converters:IssueVisibiltyConverter x:Key="IssueVisiblityConverter"/>
        </ResourceDictionary>

    </Application.Resources>
</Application>
