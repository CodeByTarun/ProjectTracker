<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:ProjectTracker.Styles">

    <Color x:Key="PrimaryColor">#26495C</Color>
    <Color x:Key="SecondaryColor">#C4A35A</Color>
    <Color x:Key="TertiaryColor">#C66B3D</Color>
    <Color x:Key="QuaternaryColor">#E5E5DC</Color>

    <SolidColorBrush x:Key="PrimaryColorBrush" Color="{StaticResource PrimaryColor}"/>
    <SolidColorBrush x:Key="SecondaryColorBrush" Color="{StaticResource SecondaryColor}"/>
    <SolidColorBrush x:Key="TertiaryColorBrush" Color="{StaticResource TertiaryColor}"/>
    <SolidColorBrush x:Key="QuaternaryColorBrush" Color="{StaticResource QuaternaryColor}"/>

    <SolidColorBrush x:Key="DataGridHoverColorBrush" Color="{StaticResource QuaternaryColor}"/>
    <SolidColorBrush x:Key="DataGridSelectedColorBush" Color="{StaticResource TertiaryColor}"/>

</ResourceDictionary>